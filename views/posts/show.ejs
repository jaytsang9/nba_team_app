<% include ../partials/header %>

<div class="container">
    <div id="show-card" class="card bg-dark">
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <h5 class="card-title"><%= post.name %></h5>
                </div>
            </div>
            <div class="card-text"><%= post.description %></div>
            <div class="card-text text-muted"><em>Posted by <%= post.author.username %> | <%= moment(post.createdAt).fromNow() %></em></div>
            <% if (currentUser && post.author.id.equals(currentUser._id)) { %>
                <a class="btn btn-warning" href="/posts/<%= post._id %>/edit">Edit</a>
                <form class="delete-form" action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            <% } %>
        </div>
        <hr>
        <div class="card card-body bg-dark">
            <a class="btn btn-success float-right" href="/posts/<%= post._id %>/comments/new">Add a New Comment</a>
            <hr>
            <% post.comments.forEach((comment) => { %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author.username %></strong>
                        <span class="float-right"><%= moment(comment.createdAt).fromNow() %></span>
                        <p><%= comment.text %></p>
                        <% if (currentUser && comment.author.id.equals(currentUser.id)) {%>
                            <a class="btn btn-warning btn-sm" href="/posts/<%= post._id %>/comments/<%=comment._id%>/edit">Edit</a>
                            <form class="delete-form" action="/posts/<%= post._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        <% } %>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>
<% include ../partials/footer %>