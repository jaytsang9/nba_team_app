<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <h1 class="mx-auto">Edit <em><%= post.name %></em> </h1>
    </div>
    <div class="row">
        <form action="/posts/<%= post._id %>/?_method=PUT" method="POST" class="mx-auto my-5">
            <div class="form-group">
                <input class="form-control" type="text" name="post[name]" placeholder="name" value="<%= post.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="post[description]" placeholder="description" value="<%= post.description %>">
            </div>
            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="row">
        <a href="/posts">Go Back</a>
    </div>
</div>

<% include ../partials/footer.ejs %>